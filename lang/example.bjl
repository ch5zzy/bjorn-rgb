# Variable definitions
display_width = 16
display_height = 16
phase_shift = 2 * PI / 3

# Macro definition
draw_gradient = {
    r = (sin(TIME / 2) + 1) * 127.5
    g = (sin(TIME / 2 + phase_shift) + 1) * 127.5
    b = (sin(TIME / 2 + phase_shift * 2) + 1) * 127.5

    set_pixel(x, y, rgb(r, g, b))
}

display_clear()

# For loops
for x in (0, display_width) {
    for y in (0, display_height) {
        draw_gradient()
    }
}

display_update()